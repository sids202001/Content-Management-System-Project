<div class="author">
  <h1 class="author__heading">Hello, welcome to our CMS</h1>
</div>

<section class="articles">
  <h2 class="articles__heading">Top 3 Commented Posts</h2>
  <ul class="article-ul">
    <% topCommentedPosts.forEach(topCommentedPosts => { %>
      <li>
        <a href="/post/<%= topCommentedPosts._id %>">
          <span><%= topCommentedPosts.title %></span>
          <span class="article-list__date"><%= topCommentedPosts.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>
</section>



<section class="articles">
  <h2 class="articles__heading">Latest Posts</h2>

  <ul class="article-ul">
    <% data.forEach(post => { %>
      <li>
        <a href="/post/<%= post._id %>">
          <span><%= post.title %></span>
          <span class="article-list__date"><%= post.createdAt.toDateString() %></span>
        </a>
      </li>
    <% }) %>
  </ul>


  <% if (nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination">&lt; View Older Posts</a>
  <% } %>

</section>